{% extends 'base.html.twig' %}

{% block title 'Welcome on xHc !'%}

{% block body %}
    <div class="jumbotron text-center">
        <h1>xHc</h1>
        <p>
            Welcome on xHc !
        </p>
    </div>

    <div class="container">
        <h2>Latest videos</h2>
        <div class="row flex">
            {% for video in videos %}
                <div class="col-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="{{ path('video.show', {id: video.id, slug: video.slug}) }}">{{ video.title }}</a>
                            </h5>
                            <p class="card-text">{{  video.description }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}